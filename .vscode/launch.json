  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Run",
      "request": "launch",
      "type": "pwa-node",
      "program": "app.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "--allow-net",
        "--allow-read",
        "--allow-write",
        "--importmap",
        "imports.json",
        "--config",
        "./tsconfig.json"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "Deno: debug",
      "request": "launch",
      "type": "pwa-node",
      "program": "app.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-net",
        "--allow-read",
        "--allow-write",
        "--importmap",
        "imports.json",
        "--config",
        "./tsconfig.json"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    }
  ]
}
